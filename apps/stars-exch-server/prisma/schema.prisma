datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Service {
  id           String        @id @default(cuid())
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  name         String?
  description  String?
  ad           Ad?           @relation(fields: [adId], references: [id])
  adId         String?
  transactions Transaction[]
}

model Ad {
  id          String    @id @default(cuid())
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  title       String?
  description String?
  price       Float?
  user        User?     @relation(fields: [userId], references: [id])
  userId      String?
  services    Service[]
}

model Transaction {
  id        String                 @id @default(cuid())
  createdAt DateTime               @default(now())
  updatedAt DateTime               @updatedAt
  amount    Float?
  status    EnumTransactionStatus?
  buyer     String?
  seller    String?
  service   Service?               @relation(fields: [serviceId], references: [id])
  serviceId String?
}

model User {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  firstName String?
  lastName  String?
  username  String   @unique
  email     String?  @unique
  password  String
  roles     Json
  ads       Ad[]
}

enum EnumTransactionStatus {
  Option1
}
